<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".list_Items">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#B5163F91"
                android:clickable="true"
                android:onClick="stock">

                <ImageView
                    android:id="@+id/breakfastaisle"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    android:layout_weight="1"
                    android:background="#78AFB4"
                    app:srcCompat="@drawable/breakfast" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/OutOfStockLay"
                        android:layout_width="358dp"
                        android:layout_height="220dp"
                        android:layout_weight="1.5"
                        android:background="#B5626842"
                        android:clickable="true"
                        android:onClick="orders"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/colddrinks"
                            android:layout_width="411dp"
                            android:layout_height="200dp"
                            android:contentDescription="Check In Tab"
                            app:srcCompat="@drawable/cooldrink" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="REFRESHMENTS AISLE"
                            android:textAlignment="center" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/aisle"
                        android:layout_width="0dp"
                        android:layout_height="174dp"
                        android:layout_weight="1"
                        android:background="#B5163F91"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:onClick="stock"
                        >

                        <ImageView
                            android:id="@+id/shelf_toys"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:contentDescription="Shelf Tab"
                            app:srcCompat="@drawable/toys" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Toys Aisle"
                            android:textAlignment="center" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>
</RelativeLayout>