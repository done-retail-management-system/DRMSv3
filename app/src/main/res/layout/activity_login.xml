<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="274dp"
        android:layout_height="282dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="500dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="506dp"
        android:layout_marginBottom="483dp"
        android:contentDescription="@string/app_logo"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="438dp"
        android:layout_marginTop="283dp"
        android:layout_marginEnd="428dp"
        android:ems="10"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:visibility="visible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/linkForgot"
        android:layout_width="196dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="525dp"
        android:layout_marginTop="488dp"
        android:text="@string/forgot"
        android:textColor="#000000"
        android:visibility="visible"
        tools:visibility="visible" />
    <EditText
        android:id="@+id/passwordText"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="443dp"
        android:layout_marginTop="342dp"
        android:layout_marginEnd="425dp"
        android:ems="10"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:visibility="visible"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="247dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="519dp"
        android:layout_marginTop="406dp"
        android:text="@string/login"
        android:visibility="visible"
        tools:text="@string/login"
        tools:visibility="visible" />



</RelativeLayout>