<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".StockOnHand">

    <ListView
        android:id="@+id/stock_list_view"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="116dp"
        android:background="@color/searchBar" />

    <EditText
        android:layout_width="471dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/search_bar"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="461dp"
        android:layout_marginBottom="32dp"
        android:drawableLeft="@android:drawable/ic_search_category_default" />

    <Button
        android:id="@+id/add_new"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="545dp"
        android:layout_marginEnd="248dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/button_properties"
        android:text="Add Stock Item" />

    <Button
        android:id="@+id/button3"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="741dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="39dp"
        android:background="@drawable/button_properties"
        android:text="Remove Stock Item" />

</RelativeLayout>