<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewStock">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="305dp"
        android:layout_marginEnd="375dp"
        android:layout_marginBottom="428dp"
        android:text="Add product details here"
        android:textSize="25sp"
        android:textStyle="bold" />





    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/viewBar"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="260dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="664dp"
        android:layout_marginBottom="320dp"
        android:hint="barcode"
        android:textAlignment="textStart" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/viewName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="664dp"
        android:layout_marginBottom="262dp"
        android:hint="product Name"
        android:textAlignment="textStart" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinnerCategory"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="260dp"
        android:layout_height="46dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="219dp"
        android:layout_marginEnd="669dp"
        android:layout_marginBottom="207dp"
        android:textAlignment="textStart" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinnerType"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="260dp"

        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="669dp"
        android:layout_marginBottom="151dp"
        android:textAlignment="textStart" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/viewWeight"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="573dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="262dp"
        android:hint="weight"
        android:textAlignment="textStart" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/viewQuantity"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="574dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="320dp"
        android:hint="quantity"
        android:textAlignment="textStart" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/viewDate"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="573dp"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="203dp"
        android:hint="manufacture date"
        android:textAlignment="textStart" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/viewEDate"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="329dp"
        android:layout_marginEnd="663dp"
        android:layout_marginBottom="88dp"
        android:hint="expiry date"
        android:textAlignment="textStart" />

    <com.google.android.material.textfield.TextInputEditText

        android:id="@+id/viewLocation"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="574dp"
        android:layout_marginTop="271dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="146dp"
        android:hint="location"
        android:textAlignment="textStart" />

    <CheckBox
        android:id="@+id/checkbox_fragile"
        android:layout_width="87dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="575dp"
        android:layout_marginEnd="298dp"
        android:layout_marginBottom="88dp"
        android:text="fragile" />

    <CheckBox
        android:id="@+id/checkbox_perishable"
        android:layout_width="122dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="711dp"
        android:layout_marginEnd="127dp"
        android:layout_marginBottom="88dp"
        android:text="perishable" />

    <Button
        android:id="@+id/buttonBarScan"
        android:background="@drawable/button_properties"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="355dp"
        android:layout_marginEnd="508dp"
        android:layout_marginBottom="330dp"
        android:text="Scan"
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonAddProduct"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="574dp"
        android:layout_marginEnd="182dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/button_properties"
        android:text="Add Product" />


</RelativeLayout>